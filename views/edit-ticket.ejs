    
<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (ticket) { %>
        <form class="add-ticket-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="user_id">Username</label>
                    <input type="text" class="form-control" name="user_id" id="user_id" value="<%= ticket.user_id %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="date">Date</label>
                    <input type="date" class="form-control" name="date_created" id="date_created" value="<%= ticket.date_created %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="comments">Comments</label>
                    <input type="text" class="form-control" name="comments" id="comments" value="<%= 
                    .comments %>" required disabled title="Ticket cannot be edited.">
                </div>

            </div>
                <div class="form-group col-md-6">
                    <label for="status">Status</label>
                    <select id="status" name="status" class="form-control" required>
                        <option selected><%= ticket.status %></option>
                        <option>Open</option>
                        <option>Closed</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Ticket</button>
        </form>
    <% } else { %>
        <p class="text-center">Ticket Not Found. Go <a href="/add">here</a> to add tickets.</p>
    <% } %>
</div>
</div>
</body>
</html>